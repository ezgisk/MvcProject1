@{
    Layout = null; // Bu layoutu temel almak için her view'da kullanabilirsiniz.
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Kütüphane Yönetim Sistemi</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome (Iconlar için) -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <!-- Kendi Stil Dosyanız (Opsiyonel) -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sol Navigasyon Paneli -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="sidebar-header">
                    <h2><i class="fas fa-book-open"></i> Kütüphane Yönetim</h2>
                </div>
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(@ViewData["Active"] == "Home" ? "active" : "")" href="@Url.Action("Index", "Home")">
                                <i class="fas fa-home"></i>
                                Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(@ViewData["Active"] == "Books" ? "active" : "")" href="@Url.Action("List", "Book")">
                                <i class="fas fa-book"></i>
                                Kitaplar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(@ViewData["Active"] == "Authors" ? "active" : "")" href="@Url.Action("List", "Author")">
                                <i class="fas fa-user"></i>
                                Yazarlar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(@ViewData["Active"] == "About" ? "active" : "")" href="@Url.Action("About", "Home")">
                                <i class="fas fa-info-circle"></i>
                                Hakkında
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- İçerik Bölümü -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-4">
                <div class="page-header">
                    <h1>@ViewData["Title"]</h1>
                </div>

                <!-- Sayfa İçeriği Burada -->
                <div class="main-content">
                    @RenderBody() <!-- Her view buraya render edilir. -->
                </div>

            </main>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2024 Kütüphane Yönetim Sistemi - Tüm hakları saklıdır</p>
    </div>

</body>
</html>
