@model MvcProject1.Models.Author

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Adı:</strong> @Model.FirstName
            </li>
            <li class="list-group-item">
                <strong>Soyadı:</strong> @Model.LastName
            </li>
            <li class="list-group-item">
                <strong>Doğum Tarihi:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")
            </li>
        </ul>
    </div>
</div>
