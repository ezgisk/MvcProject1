@model MvcProject1.Models.Author

@{
    ViewData["Title"] = "Yazar Sil";
}

<h2>@ViewData["Title"]</h2>

<h4>Yazar: @Model.FirstName @Model.LastName</h4>
<p>Bu yazarı silmek istediğinizden emin misiniz?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="@Url.Action("List", "Author")" class="btn btn-secondary">Hayır, Geri</a>
</form>
