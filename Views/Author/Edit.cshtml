@model MvcProject1.Models.Author

@{
    ViewData["Title"] = "Yazar Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Edit">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="FirstName">Ad</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" required />
    </div>
    <div class="form-group">
        <label for="LastName">Soyad</label>
        <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" required />
    </div>
    <div class="form-group">
        <label for="DateOfBirth">Doğum Tarihi</label>
        <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" required />
    </div>

    <!-- Butonlar için düzenleme -->
    <div class="d-flex" style="margin-top: 20px;">
        <button type="submit" class="btn btn-primary me-3">Kaydet</button>
        <a href="/Author/List" class="btn btn-secondary">Geri</a>
    </div>
</form>
