@model List<MvcProject1.Models.ViewModels.AuthorViewModel>

@{
    ViewData["Title"] = "Yazar Listesi";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Doğum Tarihi</th>
            <th>Kitap Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FullName</td>
                <td>@author.DateOfBirth.ToString("dd.MM.yyyy")</td>
                <td>@author.BookCount</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Author", new { id = author.Id })">Detaylar</a>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Author", new { id = author.Id })">Düzenle</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Author", new { id = author.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
